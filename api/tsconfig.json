{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@rmp/*": [
        "./apps/umass-rmp/src/*"
      ],
      "@crawler/*": [
        "./apps/course-crawler/src/*"
      ],
      "@models/*": [
        "./libs/models/src/*"
      ],
      "@models": [
        "./libs/models/src"
      ],
      "@entity/*": [
        "./libs/models/src/entity/*"
      ]
    }
  }
}